[MASTER]
ignore=.cache,.git,.idea,__pycache__,messages,screenshots

[MESSAGES CONTROL]
disable=missing-docstring,too-many-branches,too-many-public-methods,unidiomatic-typecheck,len-as-condition,too-many-return-statements,too-many-statements,fixme

[FORMAT]
max-line-length=79
expected-line-ending-format=LF

[TYPECHECK]
ignored-modules=sublime,sublime_plugin
